{# templates/generic/update.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Créer un(e) {{ entityName }}{% endblock %}

{% block body %}
    <h1>Créer un(e) {{ entityName }}</h1>
    {% if error is defined %}
        <p style="color: red;">{{ error }}</p>
    {% endif %}

    <form method="post" action="/{{ entityName }}/create">
        <div>
            <label for="libelle">Libellé :</label>
            <input type="text" id="libelle" name="libelle" required>
        </div>
        <div>
            {# Inclut le template spécifique pour le formulaire de création #}
            {% include template ~ '/create.html.twig' %}
        </div>
        <button type="submit">Créer</button>
    </form>
    <a href="/{{ entityName }}">Retour à la liste</a>
{% endblock %}
