{# templates/generic/update.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}MAJ de : {{ entity.getLabel }}{% endblock %}

{% block body %}
    <h1>Mettre à jour  {{ name }} : {{ entity.getLabel() }}</h1>
    {% if error is defined %}
        <p style="color: red;">{{ error }}</p>
    {% endif %}
    <form method="post" action="/{{ entityName }}/{{ entity.getId() }}/update">
        <div>
            <label for="label">Libellé :</label>
            <input type="text" id="label" name="label" value="{{ entity.getLabel() }}" required>
        </div>
        <div>
        {# Inclut le template spécifique pour le formulaire de mise à jour #}
        {% block update_form %}{% endblock %}
        <p>
        </div>
        <button type="submit">Mettre à jour</button>
    </form>
    <a href="/{{ entityName }}/{{ entity.getId() }}">Retour aux détails</a>
{% endblock %}
