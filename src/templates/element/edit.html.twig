<h1>Éditer {{ element.nom }}</h1>
<form method="POST" action="/element/{{ element.id }}/edit">
    <label>Nom : <input type="text" name="nom" value="{{ element.nom }}" required></label>
    <label>Type :
        <select name="type_element_id" required>
            {% for type in typesElement %}
                <option value="{{ type.id }}" {% if type.id == element.typeElement.id %}selected{% endif %}>{{ type.nom }}</option>
            {% endfor %}
        </select>
    </label>
    <label>Pièce :
        <select name="piece_id" required>
            {% for piece in pieces %}
                <option value="{{ piece.id }}" {% if piece.id == element.piece.id %}selected{% endif %}>{{ piece.nom }}</option>
            {% endfor %}
        </select>
    </label>
    <label>Degré de finition :
        <select name="degre_finition_id" required>
            {% for degre in degresFinition %}
                <option value="{{ degre.id }}" {% if degre.id == element.degreFinition.id %}selected{% endif %}>{{ degre.libelle }}</option>
            {% endfor %}
        </select>
    </label>
    <button type="submit">Mettre à jour</button>
</form>
